<script>
  let index = 0;
  const slider = document.getElementById("slider");
  const cardWrappers = document.querySelectorAll(".employee-card-wrapper");
  const totalCards = cardWrappers.length;
  const visibleCards = 3;

  function moveSlide(step) {
    index += step;
    if (index < 0) index = totalCards - visibleCards;
    if (index > totalCards - visibleCards) index = 0;
    const cardWidth = cardWrappers[0].offsetWidth;
    slider.style.transform = `translateX(-${index * cardWidth}px)`;
  }
</script>